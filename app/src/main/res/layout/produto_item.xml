<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    tools:targetApi="lollipop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="227dp">

        <TextView
            android:id="@+id/produto_item_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/produto_item_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/produto_item_id"
            app:layout_constraintStart_toStartOf="@+id/produto_item_id"
            app:layout_constraintTop_toBottomOf="@+id/produto_item_id"
            tools:text="Computador i5" />

        <TextView
            android:id="@+id/produto_item_preco"
            android:layout_width="152dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/produto_item_nome"
            app:layout_constraintTop_toBottomOf="@+id/produto_item_nome"
            app:layout_constraintVertical_bias="0.0"
            tools:text="R$ 10,00" />

        <TextView
            android:id="@+id/produto_item_quantidade"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/produto_item_preco"
            app:layout_constraintStart_toEndOf="@+id/produto_item_preco"
            app:layout_constraintTop_toTopOf="@+id/produto_item_preco"
            app:layout_constraintVertical_bias="0.0"
            tools:text="100" />

        <TextView
            android:id="@+id/produto_item_codProdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/produto_item_nome"
            app:layout_constraintTop_toBottomOf="@+id/produto_item_nome"
            app:layout_constraintVertical_bias="0.299"
            tools:text="Codigo Produto" />

        <TextView
            android:id="@+id/produto_item_nomeCat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/produto_item_codProdt"
            app:layout_constraintEnd_toEndOf="@+id/produto_item_nome"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/produto_item_codProdt"
            app:layout_constraintTop_toTopOf="@+id/produto_item_codProdt"
            tools:text="Nome Categoria" />

        <TextView
            android:id="@+id/produto_item_GTIN"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:text="GTIN"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/produto_item_codProdt" />

        <TextView
            android:id="@+id/produto_item_RFID"
            android:layout_width="215dp"
            android:layout_height="37dp"
            android:textStyle="bold"
            android:text="RFID"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/produto_item_codProdt" />

        <TextView
            android:id="@+id/produto_item_descricao"
            android:layout_width="395dp"
            android:layout_height="45dp"
            android:text="Descricao"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/produto_item_id"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/produto_item_unidade"
            android:layout_width="159dp"
            android:layout_height="32dp"
            android:text="Unidade"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/produto_item_quantidade"
            tools:layout_editor_absoluteY="80dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>